<h1><%= @place["name"] %></h1>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-light">New Post</a>
</p>

<p>
  <a href="/places"class="btn btn-light">Back to All Places</a>
</p>

<h2>My Posts</h2>
<div class="row">
  <% for post in @posts %>
    <div class="col-lg-3">
      <h3><%= post["title"] %></h3>
      <h4><%= post["posted_on"] %></h4>
      <p><%= post["description"] %></p>
    </div>
  <% end %>
</div>

